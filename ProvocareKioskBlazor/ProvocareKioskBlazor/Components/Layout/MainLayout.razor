@inherits LayoutComponentBase
@using ProvocareKioskBlazor.Models
@inject ProvocareKioskBlazor.Models.Catalog Catalog


<div class="page">
    <!--
   <div class="sidebar">
        <NavMenu />
    </div>
    -->

    <main style="background-color: lightblue;">
        <div>
            @foreach (var category in Catalog.ProductCategories)
            {
                <button class="button"> @category.ProductCategoryName</button>
            }
        </div>
        
        
            <article class="content px-4">
            @Body
            
        </article>
    </main>
</div>

